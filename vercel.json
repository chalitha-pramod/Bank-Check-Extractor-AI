{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://YOUR-BACKEND-DOMAIN-OR-URL/api/:path*"
    },
    {
      "source": "/uploads/:path*",
      "destination": "https://YOUR-BACKEND-DOMAIN-OR-URL/uploads/:path*"
    }
  ]
}


